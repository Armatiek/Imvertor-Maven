<config>
   <id>
      <name>Configuration compiler</name>
      <version-control>$Id: parms.xml 7498 2016-04-15 07:51:23Z arjan $</version-control>
   </id>
   
   <cli-parms>
      <cli-parm>
         <name>owner</name>
         <arg>name</arg>
         <tip>Name of the project owner</tip>
         <required>true</required>
      </cli-parm> 
      <cli-parm>
         <name>schemarules</name>
         <arg>name</arg>
         <tip>Name of the configuration folder for schema rules</tip>
         <required>true</required>
      </cli-parm> 
      <cli-parm>
         <name>tvset</name>
         <arg>name</arg>
         <tip>Name of the configuration folder for tagged value set definitions</tip>
         <required>true</required>
      </cli-parm> 
      <cli-parm>
         <name>metamodel</name>
         <arg>name</arg>
         <tip>Name of metamodel used in UML model</tip>
         <required>true</required>
      </cli-parm> 
      <cli-parm>
         <name>createeaprofile</name>
         <arg>name</arg>
         <tip>If an EA profile should be generated, supply this parameter with the same of the profile</tip>
         <required>false</required>
      </cli-parm> 
       
   </cli-parms>
   
   <properties>
      <WORK_CONFIG_FILE>${system/work-imvert-folder-path}/imvertor.00.config.xml</WORK_CONFIG_FILE>
      <IMVERTOR_CONFIG_XSLPATH debug="ICO">Imvert2configuration.xsl</IMVERTOR_CONFIG_XSLPATH>

      <WORK_EAPROFILE_FILE>${system/work-imvert-folder-path}/imvertor.00.eaprofile.xml</WORK_EAPROFILE_FILE>
      <IMVERTOR_EAPROFILE_XSLPATH debug="ICO">Imvert2ea-profile.xsl</IMVERTOR_EAPROFILE_XSLPATH>
   </properties>
   
   <system>
      <configuration-owner-web-folder>${system/inp-folder-path}/cfg/owners/web</configuration-owner-web-folder>
      <configuration-owner-file>${system/inp-folder-path}/cfg/owners/${cli/owner}.xml</configuration-owner-file>
      <configuration-tvset-file>${system/inp-folder-path}/cfg/tvsets/${cli/tvset}.xml</configuration-tvset-file>
      <configuration-schemarules-file>${system/inp-folder-path}/cfg/schemarules/${cli/schemarules}.xml</configuration-schemarules-file>
      <configuration-metamodel-file>${system/inp-folder-path}/cfg/metamodels/${cli/metamodel}.xml</configuration-metamodel-file>
   </system>
   
</config>
